@page "/petsoverview"
@inject HttpClient Http
<h3>PetsOverview</h3>

@if (Pets == null)
{
	<p><em>Loading...</em></p>
}
else
{
	<table class="table table-light">
		<thead class="table-primary">
		<th>Pet Id</th>
		<th>Pet Name</th>
		<th>Pet DateOfBirth</th>
		<th>Pet Species</th>
		<th>Pet Breed</th>
		<th>Pet OwnerId</th>
		<th>Pet Size</th>
		</thead>
		<tbody>
			@foreach (var pet in Pets)
			{
				<tr>
					<td>@pet.Id</td>
					<td>@pet.Name</td>
					<td>@pet.DateOfBirth</td>
					<td>@pet.Species</td>
					<td>@pet.Breed</td>
					<td>@pet.OwnerId</td>
					<td>@pet.Size</td>
				</tr>
			}
		</tbody>
	</table>

}
